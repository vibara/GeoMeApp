<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeoMeApp.MainPage"
             Title="Geo Me">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Source="dotnet_bot.png" Grid.Row="0" Grid.ColumnSpan="2" />
        <Label x:Name="LatTitle" Text="Latitude" FontSize="Small" Grid.Row="1" Grid.Column="0" HorizontalTextAlignment="Center"/>
        <Label x:Name="LongTitle" Text="Longitude" FontSize="Small" Grid.Row="1" Grid.Column="1" HorizontalTextAlignment="Center"/>
        <Label x:Name="LatValue" FontSize="Medium" Grid.Row="2" Grid.Column="0" HorizontalTextAlignment="Center" />
        <Label x:Name="LongValue" FontSize="Medium" Grid.Row="2" Grid.Column="1" HorizontalTextAlignment="Center" />
        <Button x:Name="Start" Text="Start" FontSize="Medium" Grid.Row="3" Grid.Column="0" WidthRequest="180" Margin="10,10,10,10"/>
        <Button x:Name="Stop" Text="Stop" FontSize="Medium" Grid.Row="3" Grid.Column="1" WidthRequest="180" Margin="10,10,10,10"/>
    </Grid>
</ContentPage>
