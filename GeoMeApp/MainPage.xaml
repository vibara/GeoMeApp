<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="http://schemas.microsoft.com/dotnet/2021/maui/maps"
             xmlns:sensors="clr-namespace:Microsoft.Maui.Devices.Sensors;assembly=Microsoft.Maui.Essentials"
             x:Class="GeoMeApp.MainPage"
             Title="Geo Me">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <maps:Map Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" />
        <Button x:Name="Track" Text="Start"  Grid.Row="1" Grid.Column="0" HorizontalOptions="End" HeightRequest="20" Margin="20,20,20,20"/>
        <Label x:Name="Coordinates" Text="" Grid.Row="1" Grid.Column="1" HorizontalTextAlignment="Start" HorizontalOptions="Start" VerticalTextAlignment="Center"/>
    </Grid>
</ContentPage>
